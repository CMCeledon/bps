@{
    var rutaURL = HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority) + Url.Content("~/");
    ViewBag.Title = "TecniApp";
}
<!DOCTYPE html>
<html lang="en">
@*(head html)*@
@Html.Partial("_LayoutHead")
@*(head html)*@
<!-- START PAGE CONTAINER -->
<body>

	<!-- START PAGE CONTAINER -->
	<div class="page-container">

		<!-- START PAGE SIDEBAR -->
		<div class="page-sidebar">
			<!-- START X-NAVIGATION -->
			<ul class="x-navigation"><li class="xn-logo"><div class="profile"><div class="profile-image"><img src="@rutaURL.ToString()Recursos/img/Logos/Entidad/Blanco.png" alt="Logo" /></div></div><a href="#" class="x-navigation-control"></a></li>@*<li class="xn-profile"><a href="#" class="profile-mini"><img src="@rutaURL.ToString()Recursos/img/Logos/Entidad/fav.png" alt="Logo" /></a><div class="profile"><div class="profile-image"><img src="@rutaURL.ToString()Recursos/img/Logos/Entidad/Blanco.png" alt="Logo" /></div></div></li>*@@* Menu Rol*@@Html.Partial("_LayoutMenu")@* Menu Rol*@</ul>
			<!-- END X-NAVIGATION -->
		</div>
		<!-- END PAGE SIDEBAR -->
		<!-- PAGE CONTENT -->
		<div class="page-content">

			<!-- START X-NAVIGATION VERTICAL -->
			<ul class="x-navigation x-navigation-horizontal x-navigation-panel">
				<!-- TOGGLE NAVIGATION -->
				<li class="xn-icon-button">
					<a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
				</li>
				<!-- END TOGGLE NAVIGATION -->
				<!-- SEARCH -->
				<!-- END SEARCH -->
				<!-- SIGN OUT -->
				<li class="xn-icon-button pull-right">
					<a href="#" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
				</li>
				@* Cuenta Opciones*@
				@Html.Partial("_LayoutOptionAcount")
				@* Cuenta Opciones*@

				@* Opciones Notificaciones*@
				@Html.Partial("_LayoutOptionAlert")
				@* Opciones Notificaciones*@

			</ul>
			<!-- END X-NAVIGATION VERTICAL -->
			<!-- START BREADCRUMB -->
			<ul class="breadcrumb" style="margin-bottom:0">
				<li><a href="#">Bienvenido</a></li>
			</ul>
			<!-- END BREADCRUMB -->
			<!-- PAGE CONTENT WRAPPER -->
			<div class="page-content-wrap">



				<div class="row">


					<img src="~/Recursos/img/Home/Home.jpg" width="100%" />


				</div>


				<!-- START DASHBOARD CHART -->
				<div class="chart-holder" id="dashboard-area-1" style="height: 200px;"></div>
				<div class="block-full-width">

				</div>
				<!-- END DASHBOARD CHART -->

			</div>
			<!-- END PAGE CONTENT WRAPPER -->
		</div>
		<!-- END PAGE CONTENT -->
	</div>
	<!-- END PAGE CONTAINER -->
	@* Script*@
	@Html.Partial("_ModalPartial")
	@* Script*@
	<div id="ErrorDeclaracion" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">@ViewBag.TitleError</h4>
				</div>
				<div class="modal-body">
					<p>@ViewBag.DescripcionError</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
				</div>
			</div>

		</div>
	</div>
	@* Script*@
	@Html.Partial("_FooterScript")
	@* Script*@
	<script type="text/javascript">
        $(function () {
            $(window).load(function(){
				$('#ErrorDeclaracion').modal('show');
			});

        });
	</script>
	

</body>
</html>